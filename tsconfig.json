{
    "compilerOptions": {

    "useUnknownInCatchVariables": false, 
     "suppressExcessPropertyErrors": true, 

    "outDir": "./dist",
    "allowJs": true,
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": false,
    "esModuleInterop": true,
    "types": ["handlebars", "mocha", "node"],
    "allowSyntheticDefaultImports": true,
    "lib": [
        "ES2021",
        "DOM"
        ],

   },
   "include": ["./src/**/*/", "server.js"],
   "exclude": [
    "node_modules", 
    ".vscode",
    "babel.config.js",
    "antiDOS.ts",
   ]
} 
