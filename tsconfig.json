{
    "compilerOptions": {
    "outDir": "./dist",
    "allowJs": true,
    "target": "es2016",
    "declaration": false,
    "module": "commonjs",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": ["handlebars", "mocha"],
    "allowSyntheticDefaultImports": true,
    "lib": [
        "ES2021",
        "DOM"
        ],

   },
   "include": ["./src/**/*/"],
   "exclude": [
    "node_modules", 
    ".vscode"
   ]
} 
