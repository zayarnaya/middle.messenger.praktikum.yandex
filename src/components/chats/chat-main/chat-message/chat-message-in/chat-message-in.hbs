<div class="chat-main__message message-incoming">
  <div class="chat-main__message-wrap message-left">
    <div class="chat-main__message-plus-avatar">
      <div class="chat-main__avatar message-left">
        <img src="{{avatar}}" alt="{{name}}" title="{{name}}" />
      </div>
      <div class="chat-main__message-in">
        <div class="message">
          {{{message}}}
        </div>
        <div class="timestamp">
          <time>{{{time}}} </time>
        </div>
      </div>
    </div>
    <div class="chat-main__username">{{{name}}}</div>
  </div>
</div>
